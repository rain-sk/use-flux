{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "outDir": "./js/",
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "js",
        "node_modules",
        "typings/globals"
    ]
}
