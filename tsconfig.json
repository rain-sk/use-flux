{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "es2015"],
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react"
    },
    "exclude": [
        "js",
        "node_modules",
        "typings/globals"
    ]
}